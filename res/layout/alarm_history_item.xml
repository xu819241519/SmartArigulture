<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/alarm_history_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_small" >
    </TextView>

    <LinearLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/divider"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/alarm_history_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_small" >
    </TextView>

    <LinearLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/divider"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/alarm_history_level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_small" >
    </TextView>

    <LinearLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/divider"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/alarm_history_greenhouse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_small" >
    </TextView>

    <LinearLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/divider"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/alarm_history_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_small" >
    </TextView>

    <LinearLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/divider"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/alarm_history_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_small" >
    </TextView>

</LinearLayout>