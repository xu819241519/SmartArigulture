<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/alarm_history_id"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/nav_bg"
            android:textSize="@dimen/text_top_small" >
        </TextView>

        <TextView
            android:id="@+id/alarm_history_time"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/listview_text"
            android:textSize="@dimen/text_top_small" >
        </TextView>

        <TextView
            android:id="@+id/alarm_history_greenhouse"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/listview_text"
            android:textSize="@dimen/text_top_small" >
        </TextView>

        <TextView
            android:id="@+id/alarm_history_level"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/listview_text"
            android:textSize="@dimen/text_top_small" >
        </TextView>

        <TextView
            android:id="@+id/alarm_history_content"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/listview_text"
            android:textSize="@dimen/text_top_small" >
        </TextView>

        <TextView
            android:id="@+id/alarm_history_status"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/listview_text"
            android:textSize="@dimen/text_top_small" >
        </TextView>
    </LinearLayout>

</HorizontalScrollView>