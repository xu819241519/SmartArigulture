<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/instructions_history_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/nav_bg"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/text_top_small" >
    </TextView>


    <TextView
        android:id="@+id/instructions_history_sendtime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/text_top_small"
        android:textColor="@color/listview_text"
        android:layout_gravity="center" >
    </TextView>


    <TextView
        android:id="@+id/instructions_history_performtime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/text_top_small"
        android:textColor="@color/listview_text"
        android:layout_gravity="center" >
    </TextView>



    <TextView
        android:id="@+id/instructions_history_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/text_top_small"
        android:layout_marginBottom="4dp"
        android:textColor="@color/listview_text"
        android:layout_gravity="center" />



    <TextView
        android:id="@+id/instructions_history_greenhouse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/text_top_small"
        android:textColor="@color/listview_text"
        android:layout_gravity="center" >
    </TextView>



    <TextView
        android:id="@+id/instructions_history_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.3"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/text_top_small"
        android:textColor="@color/listview_text"
        android:layout_gravity="center" />

</LinearLayout>