<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/instructions_history_id"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/nav_bg"
        android:textSize="@dimen/text_top_small" >
    </TextView>

    <TextView
        android:id="@+id/instructions_history_sendtime"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/listview_text"
        android:textSize="@dimen/text_top_small" >
    </TextView>

    <TextView
        android:id="@+id/instructions_history_performtime"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/listview_text"
        android:textSize="@dimen/text_top_small" >
    </TextView>

    <TextView
        android:id="@+id/instructions_history_content"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/listview_text"
        android:textSize="@dimen/text_top_small" />

    <TextView
        android:id="@+id/instructions_history_greenhouse"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/listview_text"
        android:textSize="@dimen/text_top_small" >
    </TextView>

    <TextView
        android:id="@+id/instructions_history_user"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/listview_text"
        android:textSize="@dimen/text_top_small" />

    <TextView
        android:id="@+id/instructions_history_runperiod"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/listview_text"
        android:textSize="@dimen/text_top_small" >
    </TextView>

</LinearLayout>