<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_horizontal"
	android:background="@drawable/environment_gridview"
	android:orientation="vertical">

	<TextView
		android:id="@+id/environment_lastvalue"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_marginTop="@dimen/big_space"
		android:layout_marginBottom="@dimen/normal_space"
		android:background="@drawable/environment_value_bg"
		android:gravity="center"
		android:textColor="@color/white"
		android:textSize="@dimen/text_big" />

	<TextView
		android:id="@+id/environment_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:textColor="@color/gray_dark"
		android:textSize="@dimen/text_larger" />

	<TextView
		android:id="@+id/environment_fitvalue"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:paddingTop="@dimen/little_space"
		android:paddingBottom="@dimen/normal_space"
		android:textSize="@dimen/text_smallest"
		android:textColor="@color/gray" />

</LinearLayout>