<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@drawable/listview_shape"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:orientation="horizontal"
		android:gravity="center_vertical">
		<View
			android:layout_width="@dimen/little_space"
			android:layout_height="30dp"
			android:background="@color/orange" />

		<TextView
			android:id="@+id/threshold_environment_tv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/normal_space"
			android:layout_marginLeft="@dimen/normal_space"
			android:textColor="@color/orange"
			android:text="二氧化碳"
			android:textSize="@dimen/text_big" />
	</LinearLayout>
	<View
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@color/gray_lighter" />
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/little_space"
		android:orientation="horizontal">
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="@dimen/big_space"
			android:text="最大值"
			android:textSize="@dimen/text_normal"
			android:textColor="@color/gray_dark" />
		<TextView
			android:id="@+id/threshold_history_max"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="@dimen/text_normal"
			android:textColor="@color/green"
			android:text="00000"
			android:paddingRight="@dimen/big_space"
			android:gravity="right" />
	</LinearLayout>
	<View
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:background="@color/gray_lighter" />
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/little_space"
		android:orientation="horizontal">
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="最小值"
			android:textSize="@dimen/text_normal"
			android:textColor="@color/gray_dark"
			android:paddingLeft="@dimen/big_space" />
		<TextView
			android:id="@+id/threshold_history_min"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="@dimen/text_normal"
			android:textColor="@color/green"
			android:text="00000"
			android:paddingRight="@dimen/big_space"
			android:gravity="right" />
	</LinearLayout>
	<View
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:background="@color/gray_lighter" />
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/little_space"
		android:orientation="horizontal">
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="创建时间"
			android:textSize="@dimen/text_normal"
			android:textColor="@color/gray_dark"
			android:paddingLeft="@dimen/big_space" />
		<TextView
			android:id="@+id/threshold_history_time"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:textSize="@dimen/text_small"
			android:textColor="@color/green"
			android:text="00000"
			android:paddingRight="@dimen/big_space"
			android:gravity="right" />


	</LinearLayout>
</LinearLayout>