<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/greenhouse_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@drawable/greenhouse_gridview_item_selector"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/greenhouse_item_icon"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/little_space"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/greenhouse_icon" />

        <TextView
            android:id="@+id/greenhouse_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_space"
            android:gravity="center"
            android:text="温室一号"
            android:textColor="@color/listview_text"
            android:textSize="@dimen/text_larger" />
    </LinearLayout>

</LinearLayout>